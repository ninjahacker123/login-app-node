<!-- Includes header.ejs -->
<%- include("header") -%>

<center>
    <!-- Login Box -->
    <div class="login-box">
        <h1>Login</h1>
        <!-- Form -->
        <form action="/" method="POST">
            <input type="text" name="username" placeholder="Username" autocomplete="off" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit" class="btn btn-lg btn-outline-warning btn-block">Login</button>
        </form>
    </div>
</center>
</body>

</html>